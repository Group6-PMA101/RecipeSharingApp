<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:paddingBottom="24dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".Activity.EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_back"
            android:layout_alignParentStart="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/black_333"
            android:background="@drawable/ic_arrow_left"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:fontFamily="@font/be_vietnam_pro_bold"
            android:textColor="@color/black_333"
            android:textSize="16sp"/>
    </RelativeLayout>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="24dp"
        android:layout_width="172dp"
        android:layout_height="172dp"
        app:shapeAppearance="@style/rounded_corner_50"
        android:src="@drawable/default_avatar"
        android:id="@+id/img_user_avatar"/>
    <TextView
        android:layout_gravity="left"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_name"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_rounded_corner_6_stroke"
            android:hint="Enter your name"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_333"
            android:fontFamily="@font/be_vietnam_pro_light"
            android:textColorHint="@color/white_9A9"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_gravity="left"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:hintEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:contextClickable="false"
            android:linksClickable="false"
            android:longClickable="false"
            android:id="@+id/edt_email"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_1C1_50"
            android:background="@drawable/cus_bgr_rounded_corner_6_stroke"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_333"
            android:fontFamily="@font/be_vietnam_pro_light"
            android:textColorHint="@color/white_9A9"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_gravity="left"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:textColor="@color/black_333"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:hintEnabled="false"
        app:endIconTint="@color/black_333">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:textSize="15sp"
            android:fontFamily="@font/be_vietnam_pro_light"
            android:textColorHint="@color/white_9A9"
            android:textColor="@color/black_333"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:background="@drawable/cus_bgr_rounded_corner_6_stroke"/>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cus_bgr_rounded_corner_10"
        android:backgroundTint="@color/red_E00"
        android:text="Save changes"
        android:textColor="@color/white_000"
        android:textAllCaps="false"
        android:fontFamily="@font/be_vietnam_pro_regular"/>
</LinearLayout>