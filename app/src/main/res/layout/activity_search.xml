<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="48dp"
    android:paddingBottom="24dp"
    tools:context=".SearchActivity">
    <EditText
        android:id="@+id/edt_search"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Search recipes"
        android:textColorHint="@color/white_1C1"
        android:background="@drawable/cus_edt_stroke_9d9"
        android:paddingHorizontal="12dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/be_vietnam_pro_light"
        android:textColor="@color/black_333"/>
    <Button
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort"
        android:drawableEnd="@drawable/ic_down"
        android:background="@color/red_E00"
        android:textColor="@color/white_000"
        android:drawableTint="@color/white_000"
        android:textAllCaps="false"
        android:paddingHorizontal="12dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv_search"/>
</LinearLayout>