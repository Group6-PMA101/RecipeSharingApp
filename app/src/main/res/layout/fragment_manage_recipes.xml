<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".Fragment.ManageRecipesFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_gravity="right"
            android:id="@+id/btn_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:drawableEnd="@drawable/ic_down"
            android:background="@color/red_E00"
            android:textColor="@color/white_000"
            android:drawableTint="@color/white_000"
            android:textAllCaps="false"
            android:paddingHorizontal="12dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_noti"
            android:layout_marginVertical="12dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No matching recipes found"
            android:fontFamily="@font/be_vietnam_pro_light"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcv_recipe_admin"/>
    </LinearLayout>
</FrameLayout>