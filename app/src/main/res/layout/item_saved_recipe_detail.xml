<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:paddingVertical="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:shapeAppearance="@style/rounded_corner_12"
            android:src="@color/white_1C1"
            android:scaleType="centerCrop"
            android:id="@+id/img_recipe_thumbnail"/>
        <ProgressBar
            android:id="@+id/pb_load_img"
            android:indeterminateTint="@color/red_E00"
            android:layout_centerInParent="true"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/cus_bgr_gradient_black_tran"/>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/cus_bgr_rounded_corner_10"
                android:backgroundTint="@color/white_030_CC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:backgroundTint="@color/white_000"/>
                <TextView
                    android:id="@+id/tv_recipe_averageRating"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="10sp"
                    android:textColor="@color/white_000"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:padding="6dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/cus_bgr_rounded_corner_16"
                android:backgroundTint="@color/white_000">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_more"
                    android:backgroundTint="@color/red_E00"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:textSize="16sp"
            android:text="Recipe Name"
            android:textColor="@color/white_000"/>
        <TextView
            android:id="@+id/tv_cook_time"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:textSize="12sp"
            android:text="0 Ingredients | 0 min"
            android:textColor="@color/white_000"/>
    </LinearLayout>
</RelativeLayout>