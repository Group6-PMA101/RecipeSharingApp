<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:shapeAppearance="@style/rounded_corner_12"
        android:src="@drawable/caption"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/cus_bgr_gradient_black_tran"/>
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/cus_bgr_rounded_corner_10"
                android:backgroundTint="@color/white_030_CC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:backgroundTint="@color/white_000"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4,5"
                    android:textSize="10sp"
                    android:textColor="@color/white_000"
                    android:fontFamily="@font/be_vietnam_pro_semibold"
                    android:padding="6dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/cus_bgr_rounded_corner_16"
                android:backgroundTint="@color/white_000">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_more"
                    android:backgroundTint="@color/red_E00"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:textSize="16sp"
            android:text="How to make Italian Spaghetti at home"
            android:textColor="@color/white_000"/>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:textSize="12sp"
            android:text="12 Ingredients | 40 min"
            android:textColor="@color/white_000"/>
    </LinearLayout>
</RelativeLayout>