<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="162dp"
    android:layout_height="162dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/caption"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/rounded_corner_12"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/caption"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/rounded_corner_12"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@color/black_333_99"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/rounded_corner_12"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:padding="24dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:textAlignment="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnam_pro_extrabold"
                android:textSize="18sp"
                android:text="Name"
                android:textColor="@color/white_000"/>
            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:textSize="18sp"
                android:text="24 Recipe"
                android:textColor="@color/white_000"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>