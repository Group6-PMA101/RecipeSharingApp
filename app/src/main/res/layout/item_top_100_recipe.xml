<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="24dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:scaleType="centerCrop"
                android:src="@color/white_1C1"
                app:shapeAppearance="@style/rounded_corner_16"
                android:id="@+id/img_recipe_thumbnail"/>
            <ProgressBar
                android:id="@+id/pb_load_img"
                android:indeterminateTint="@color/red_E00"
                android:layout_centerInParent="true"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Recipe Name"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:textColor="@color/black_333"
            android:layout_marginTop="6dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_recipe_owner"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="User Name"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:textColor="@color/white_9A9"
            android:textSize="10sp"/>
    </LinearLayout>
</RelativeLayout>